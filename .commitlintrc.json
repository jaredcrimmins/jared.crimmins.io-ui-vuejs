{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-case": [
      2,
      "always",
      [
        "kebab-case"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "components"
      ]
    ],
    "type-enum": [
			2,
			"always",
			[
				"build",
        "ci",
				"docs",
				"feat",
				"fix",
				"perf",
				"refactor",
				"revert",
				"style",
				"test"
			]
		]
  }
}
